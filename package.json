{
  "name": "root-node-template",
  "version": "1.0.0",
  "description": "Base template to build Node.js application",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "nodemon",
    "test": "jest",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0 ./src",
    "format": "prettier --write --ignore-unknown --config .prettierrc ./src",
    "prepare": "husky",
    "precommit": "lint-staged",
    "commitlint": "commitlint --edit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cercedo/root-node-template.git"
  },
  "keywords": [
    "template",
    "Node.js"
  ],
  "author": "Cercedo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cercedo/root-node-template/issues"
  },
  "homepage": "https://github.com/Cercedo/root-node-template#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^29.7.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
